server {
    listen 80;
    server_name _;

    # Optional: redirect all HTTP to HTTPS
    # return 301 https://$host$request_uri;

    # OR serve HTTP directly (if you don't want to force HTTPS)
    # Proxy to web frontend
    location / {
        proxy_pass http://web:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    server_name _;  # Accept any hostname, not just the IP

    ssl_certificate     /etc/ssl/certs/172.30.10.210.crt;
    ssl_certificate_key /etc/ssl/private/172.30.10.210.key;

    # SSL configuration best practices
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Serve frontend application
    location / {
        proxy_pass http://web:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Static files (served directly by Nginx from fileserver storage)
    location /files/ {
        alias /app/storage/;
        autoindex on;
        # Optional: add CORS headers if needed
        add_header Access-Control-Allow-Origin *;
    }

    # Proxy uploads to fileserver
    location /upload {
        proxy_pass http://fileserver:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        client_max_body_size 2G;

        # Timeout settings for large uploads
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
        send_timeout 600;
    }

    # Proxy API endpoints to fileserver
location :3000/api/ {
        proxy_pass http://fileserver:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy to your main API server (if needed)
    location /v1/ {
        proxy_pass http://app:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
